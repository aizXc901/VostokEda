<h2>Prices</h2>

<div class="mb-3">
    <a href="/prices/new" class="btn btn-primary">Add New Price</a>
</div>

<div class="row">
    <div class="col-md-12">
        <% if (prices.length === 0) { %>
            <div class="alert alert-info">No prices found. <a href="/prices/new">Register one now</a>.</div>
        <% } else { %>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Supplier</th>
                        <th>Category</th>
                        <th>Nomenclature</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% prices.forEach(price => { %>
                        <tr>
                            <td><%= price.id %></td>
                            <td><%= price.Supplier.name %></td>
                            <td><%= price.Supplier.CostCategory.name %></td>
                            <td><%= price.Nomenclature.name %></td>
                            <td><%= price.price %></td>
                            <td><%= new Date(price.date).toLocaleDateString() %></td>
                            <td>
                                <!-- Add edit/delete buttons if needed -->
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>