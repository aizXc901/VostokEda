<h2>Cost Categories</h2>

<div class="mb-3">
    <a href="/categories/new" class="btn btn-primary">Add New Category</a>
</div>

<div class="row">
    <div class="col-md-12">
        <% if (categories.length === 0) { %>
            <div class="alert alert-info">No cost categories found. <a href="/categories/new">Create one now</a>.</div>
        <% } else { %>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td><%= category.id %></td>
                            <td><%= category.name %></td>
                            <td>
                                <!-- Add edit/delete buttons if needed -->
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>