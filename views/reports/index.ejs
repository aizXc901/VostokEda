<h2>Expenses Report for Events</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <label for="eventFilter" class="form-label">Filter by Event:</label>
        <select class="form-select" id="eventFilter">
            <option value="">All Events</option>
            <!-- Events would be populated here dynamically -->
        </select>
    </div>
    <div class="col-md-6">
        <label for="periodFilter" class="form-label">Filter by Period:</label>
        <select class="form-select" id="periodFilter">
            <option value="all">All Time</option>
            <option value="month">Current Month</option>
            <option value="quarter">Current Quarter</option>
            <option value="year">Current Year</option>
        </select>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <% if (reportData.length === 0) { %>
            <div class="alert alert-info">No events found to generate reports.</div>
        <% } else { %>
            <% reportData.forEach(report => { %>
                <div class="card mb-4 report-card">
                    <div class="card-header <%= report.exceedsBudget ? 'bg-danger text-white' : 'bg-light' %>">
                        <h5 class="mb-0">
                            <%= report.event.name %>
                            <span class="float-end">
                                <% if (report.exceedsBudget) { %>
                                    <span class="badge bg-danger">Budget Exceeded!</span>
                                <% } else { %>
                                    <span class="badge bg-success">Within Budget</span>
                                <% } %>
                            </span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Date:</strong> <%= new Date(report.event.date).toLocaleDateString() %><br>
                                <strong>Expected Guests:</strong> <%= report.event.expectedGuests %><br>
                                <strong>Description:</strong> <%= report.event.description || 'No description' %>
                            </div>
                            <div class="col-md-6">
                                <strong>Planned Budget:</strong> <%= report.totalBudget.toLocaleString('ru-RU') %> RUB<br>
                                <strong>Total Expenses:</strong> <%= report.totalExpense.toLocaleString('ru-RU') %> RUB<br>
                                <strong>Difference:</strong> 
                                <span class="<%= report.exceedsBudget ? 'text-danger' : 'text-success' %>">
                                    <%= (report.totalExpense - report.totalBudget).toLocaleString('ru-RU') %> RUB
                                </span>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <h6>Expenses by Category:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Category</th>
                                        <th>Amount (RUB)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% Object.entries(report.categoryExpenses).forEach(([category, amount]) => { %>
                                        <tr class="report-category-row">
                                            <td><%= category %></td>
                                            <td><%= amount.toLocaleString('ru-RU') %></td>
                                        </tr>
                                    <% }); %>
                                    <tr class="table-dark fw-bold">
                                        <td>TOTAL</td>
                                        <td><%= report.totalExpense.toLocaleString('ru-RU') %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<style>
    .report-card {
        border-left: 4px solid #007bff;
    }
    
    .bg-danger.text-white {
        background-color: #dc3545 !important;
        color: white !important;
    }
</style>